<!DOCTYPE HTML>
<html>
 <head>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/drug.css">
  <meta http-equiv="Content-Type" content="text/html; charset=cp1251"/>
  <title>vApteka</title>
 </head>
 <body>
<div class="home">
  <div id="pharmacyName">
    <a href="/"><img class="baseImg" alt='pharmacyName' src="/pics/pharmacyName.jpg" width="1616px" lenght="150px"></a>
  </div>
  <div id="logInField">
    <% if(null == user) {%>
      <div id="logregField">
        <a href="/users/login" id="loginLink"><div>Log in</div></a>
        <a href="/users/register" id="loginLink"><div>Register</div></a>
      </div>
    <%}else {%>
      <div id="profileField">
        <a href="/users/profile"><label><%= user.firstname %> <%= user.lastname %></label></a>
        <div id="avatarImg"><a href="/users/profile"><img alt='profileImg' src="/pics/avatars/<%= user.avatar %>" width="66px" lenght="66px"></a></div>
        <a href="/users/logout" id="loginLink"><div id="logoutF">Log out</div></a>
      </div>
    <%} %>
  </div>
</div>
<!-- Special part start -->
<div class="content">
  <div id="currentDrug">
    <div id="upperside">
      <img class="currentImg" alt='<%= name %>' src="<%= image %>" width="300px" lenght="300px">
    </div>
    <div id="rightsideDrug">
      <label id="drugName"><%= name %></label><br>
      <label id="drugBasicInfo">Company: <%= company %><br>
      Volume: <%= volume %><br>
      Type of volume: <%= type_of_volume %><br>
      Price: <%= price %></label>
      <br><br>
    </div>
    <div id="buttonsideDrug"><button class="button" style="vertical-align:middle"><span>Add to Basket </span></button></div>
    <div id="bottomsideDrug">
      <h4>Symptoms:</h4><label class="drugNotBasicInfo"><%= symptoms %></label>
      <h4>Side effects:</h4><label class="drugNotBasicInfo"> <%= side_effects %></label>
      <h4>Contraindications:</h4><label class="drugNotBasicInfo"><%= contraindications %></label>
      <h4>Overdose:</h4><label class="drugNotBasicInfo"><%= overdose %></label>
      <h4>Storage conditions:</h4><label class="drugNotBasicInfo"><%= storage_conditions %></label>
      <h4>Mode of application:</h4><label class="drugNotBasicInfo"><%= mode_of_application %></label>
      <h4>Properties:</h4><label class="drugNotBasicInfo"><%= properties %></label>
    </div>
    <% if(admin == true) {%>
    <form method="post">
       <input type="submit" value="Remove drug"></p>
    </form>
    <%}%>
 </div>
</div>
<!-- Special part ends -->
<div id="bottomOfSite">
  <p id="rights">(c) 2016 Vapteka, all rights reserved</p>
</div>
</body>
</html>
