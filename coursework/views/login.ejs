<!doctype html>
<html>
<head>
  <link rel="stylesheet" href="../css/index.css">
  <meta http-equiv="Content-Type" content="text/html; charset=cp1251"/>
  <title>Log In</title>
</head>
<body>
  <div class="home">
    <div id="pharmacyName">
      <a href="/"><img class="baseImg" alt='pharmacyName' src="../pics/pharmacyName.jpg" width="1616px" lenght="150px"></a>
    </div>
    <div id="logInField">
      <% if(null == user) {%>
        <div id="logregField">
          <a href="/users/login" id="loginLink"><div>Log in</div></a>
          <a href="/users/register" id="loginLink"><div>Register</div></a>
        </div>
      <%}else {%>
        <div id="profileField">
          <a href="/users/<%= user._id %>"><label><%= user.firstname %> <%= user.lastname %></label></a>
          <a href="/users/<%= user._id %>"><img class="profileImg" alt='profileImg' src="../pics/profile.png" width="66px" lenght="66px"></a>
          <a href="/users/logout" id="loginLink"><div>Log out</div></a>
        </div>
      <%} %>
    </div>
  </div>
  <div class="regContent">
    <form method="post" accept-charset="UTF-8">
      <div id="regInsideContent">
      <div class="regField">
        <label>Login:</label>
        <input type="text" name="username">
      </div>
      <div class="regField">
        <label>Password:</label>
        <input type="password" name="password">
      </div>
      <div class="regField">
        <input id="submitButt" type="submit" value="Sign In!">
      </div>
    </div>
    </form>

    <div class="row">
      <% if(success_msg != '') {%>
          <div class="alert alert-success"><%=success_msg%></div>
      <%} %>
      <% if(error_msg != '') {%>
          <div class="alert alert-danger"><%=error_msg%></div>
      <%} %>
      <% if(error != '') {%>
          <div class="alert alert-danger"><%=error%></div>
      <%} %>
    </div>

  </div>
  <div id="bottomOfSite">
    <p id="rights">(c) 2016 Vapteka, all rights reserved</p>
  </div>
</body>
</html>
