<!doctype html>
<html>
<head>
  <link rel="stylesheet" href="../css/index.css">
  <meta http-equiv="Content-Type" content="text/html; charset=cp1251"/>
  <title>Register</title>
</head>
<body>
  <div class="home">
    <div id="pharmacyName">
      <a href="/"><img class="baseImg" alt='pharmacyName' src="../pics/pharmacyName.jpg" width="1616px" lenght="150px"></a>
    </div>
    <div id="logInField">
      <form form method="get" accept-charset="UTF-8">
    <div class="loginForm">
      <label>Login:</label>
      <input type="text" name="login" class="login">
    </div>
    <div class="loginForm">
      <label>Password:</label>
      <input type="text" name="password" class="password">
    </div>
    <div class="loginForm">
      <a class="loginLink" href="forgotpassword">Forgot account?</a>
      <a class="loginLink" href="users/register">Registration</a>
      <input type="submit" value="Sign In">
    </div>
    </form>
  </div>
  </div>
  <div class="regContent">
    <form method="post" accept-charset="UTF-8">
      <div id="regInsideContent">
      <div class="regField">
        <label>First name:</label>
        <input type="text" name="firstname">
      </div>
      <div class="regField">
        <label>Last name:</label>
        <input type="text" name="lastname">
      </div>
      <div class="regField">
        <label>E-mail:</label>
        <input type="text" name="email">
      </div>
      <div class="regField">
        <label>Username:</label>
        <input type="text" name="username">
      </div>
      <div class="regField">
        <label>Password:</label>
        <input type="text" name="password">
      </div>
      <div class="regField">
        <label>Confirm password:</label>
        <input type="text" name="confirmPassword">
      </div>
        </div>
      <div class="regField">
        <label id="sexLabel">Choose your sex:</label>
        <input type="radio" name="sex" value="male" checked>Male
        <input type="radio" name="sex" value="female">Female
      </div>
      <div class="regField">
        <input id="submitButt" type="submit" value="Sign Me Up!">
      </div>
    </form>
    <p>
    </p>

    <% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function(elements){ %>
    <div class="alert alert-danger"><%= elements.msg %></div>
    <%}); %>
    <%} %>

    <div class="row">
      <% if(typeof success_msg != 'undefined'){ %>
        <div class="alert alert-success"><%= success_msg %></div>
      <%} %>
      <% if(typeof error_msg != 'undefined'){ %>
        <div class="alert alert-success"><%= error_msg %></div>
      <%} %>
      <% if(typeof error != 'undefined'){ %>
        <div class="alert alert-success"><%= error %></div>
      <%} %>
    </div>

  </div>
  <div id="bottomOfSite">
    <p id="rights">(c) 2016 Vapteka, all rights reserved</p>
  </div>
</body>
</html>
