    <div class="remodal" data-remodal-id="joinNetwork">
      <button data-remodal-action="close" class="remodal-close"></button>
      <header class="major my-form-header">
        <h2>Join an apartment network</h2>
      </header>
      <form method="post" action="/profile/join_network">
        <div class="row uniform 100%">
          <input type="hidden" name="_csrf" value='<%=csrfToken%>'>
          <div class="12u$">
            <label class="my-label" for="flatnumber">Flat number</label>
            <input class="my-text-inputs"type="text" name="flatnumber" id="flatnumber" value="" placeholder="Flat number">
            <label class="my-label" for="password">Network code</label>
            <input class="my-text-inputs"type="text" name="password" id="password" value="" placeholder="Network code">
            <div class="12u$">
              <button class="button special fit my-btn">Join</button>
            </div>
          </div>
        </div>
      </form>
      <!--<button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
      <button data-remodal-action="confirm" class="remodal-confirm">OK</button>-->

    </div>

    <div class="remodal" data-remodal-id="changePassword">
      <button data-remodal-action="close" class="remodal-close"></button>
      <header class="major my-form-header">
        <h2>Change your password</h2>
      </header>
      <form method="post" action="/profile/change_password">
        <div class="row uniform 100%">
          <div class="12u$">
            <label class="my-label" for="oldPassword">Old Password</label>
            <input class="my-text-inputs"type="text" name="oldPassword" id="oldPassword" value="" placeholder="Old Password">
            <label class="my-label" for="newPassword">New Password</label>
            <input class="my-text-inputs"type="text" name="newPassword" id="newPassword" value="" placeholder="New Password">
            <label class="my-label" for="newConfirmPassword">Confirm new Password</label>
            <input class="my-text-inputs"type="text" name="newConfirmPassword" id="newConfirmPassword" value="" placeholder="Confirm New Password">
            <input type="hidden" name="_csrf" value='<%=csrfToken%>'>
            <div class="12u$">
              <button class="button special fit my-btn">Save</button>
            </div>
          </div>
        </div>
      </form>
      <!--<button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
      <button data-remodal-action="confirm" class="remodal-confirm">OK</button>-->

    </div>

    <div class="remodal" data-remodal-id="ChangeAvatar">
      <button data-remodal-action="close" class="remodal-close"></button>
      <header class="major my-form-header">
        <h2>Change Avatar</h2>
      </header>
      <form method="post" enctype="multipart/form-data" action="/profile/?_csrf=<%=csrfToken%>">
        <div class="row uniform 100%">
          <div class="12u$">
            <label class="my-label" for="avatar">Upload an avatar</label>
            <input class="my-text-inputs"type="file" name="avatar" id="avatar" accept="image/jpeg" placeholder="Upload an avatar">
            <div class="12u$">
              <button class="button special fit my-btn">Join</button>
            </div>
          </div>
        </div>
      </form>
      <!--<button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
      <button data-remodal-action="confirm" class="remodal-confirm">OK</button>-->

    </div>
    <div class="remodal" data-remodal-id="requestModal">
      <button data-remodal-action="close" class="remodal-close"></button>
      <header class="major my-form-header">
        <h2>Send a new request</h2>
      </header>
      <form method="post" action="/profile/create_request" id="userRequestForm">
        <input type="hidden" name="_csrf" value='<%=csrfToken%>'>
        <div class="row uniform 100%">
          <div class="6u$ network-create-form userCategoryWrapper">
            <label class="my-label" for="category">Select a category</label>
            <div class="select-wrapper userSelectWrapper">
												<select name="category" id="categoryUser">
													<option selected isabled value style="display:none">Category</option>
                          <!--<option value="search">Search</option>-->
													<option value="Manufacturing">Manufacturing</option>
													<option value="Shipping">Shipping</option>
													<option value="Administration">Administration</option>
													<option value="Resources">Human Resources</option>
												</select>
						</div>
          </div>
                      <div class="12u$ network-create-form">
                        <label class="my-label" for="title">Title</label>
                        <input class="my-text-inputs" type="text" name="title" id="title" value="" placeholder="New Password">
                      </div>
                      <div class="12u$ network-create-form">
                        <label class="my-label" for="text">Request's message</label>
                        <textarea class="my-textArea" name="text" id="text" placeholder="Enter your message" rows="6"></textarea>
                      <!--  <input class="my-text-inputs"type="textarea" name="text" id="text" value="" placeholder="Request message">-->
                      </div>
                      <div class="12u$">
                          <button class="button special fit my-btn request-btn">Send</button>
                      </div>
        </div>
      </form>
      <!--<button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
