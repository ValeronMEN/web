<!DOCTYPE HTML>
<html>
 <head>
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/drug.css">
  <meta http-equiv="Content-Type" content="text/html; charset=cp1251"/>
  <script type="text/javascript" src="/scripts/cookies.js"></script>
  <script type="text/javascript" src="/scripts/focus.js"></script>
  <script type="text/javascript" src="/scripts/onload.js"></script>
  <script type="text/javascript" src="/scripts/removedrug.js"></script>
  <title>vApteka</title>
 </head>
 <body>
<div class="home">
  <div id="pharmacyName">
    <a href="/"><img class="baseImg" alt='pharmacyName' src="/pics/pharmacyName.jpg" width="1616px" lenght="150px"></a>
  </div>
  <div id="basket">
    <a href="/basket">
      <div id="basketBackground"></div>
      <div id="basketName">
        <label>Basket</label>
        <div id="circle">
          <div id="basketSize"></div>
        </div>
      </div>
    </a>
  </div>
  <div id="logInField">
    <% if(null == user) {%>
      <div id="logregField">
        <a href="/users/login" id="loginLink"><div>Log in</div></a>
        <a href="/users/register" id="loginLink"><div>Register</div></a>
      </div>
    <%}else {%>
      <div id="profileField">
        <a href="/users/profile"><label><%= user.firstname %> <%= user.lastname %></label></a>
        <div id="avatarImg"><a href="/users/profile"><img alt='profileImg' src="data:image/jpg;base64, <%= user.avatar %>" width="66px" lenght="66px"></a></div>
        <a href="/users/logout" id="loginLink"><div id="logoutF">Log out</div></a>
      </div>
    <%} %>
  </div>
</div>
<!-- Special part start -->
<div class="content">
  <div id="currentDrug">
    <div id="upperside">
      <img class="currentImg" alt='<%= name %>' src="data:image/jpg;base64, <%= image %>" width="300px" lenght="300px">
    </div>
    <div id="rightsideDrug">
      <label id="drugName"><%= name %></label><br>
      <label id="drugBasicInfo">Company: <%= company %><br>
      Volume or mass: <%= volumemass %><br>
      Unit: <%= unit %><br>
      Type: <%= type %><br>
      Price: <%= price %> UAH</label>
      <br><br>
    </div>
    <div id="buttonsideDrug">
      <button class="button" style="vertical-align:middle" onclick="setCookieDrug('<%= _id %>'); buying(this);">
        <span>Add to Basket </span>
      </button>
    </div>
    <div id="bottomsideDrug">
      <h4>Symptoms:</h4><pre class="drugNotBasicInfo"><%= symptoms %></pre>
      <h4>Contraindications:</h4><pre class="drugNotBasicInfo"><%= contraindications %></pre>
      <h4>Overdose:</h4><pre class="drugNotBasicInfo"><%= overdose %></pre>
      <h4>Storage conditions:</h4><pre class="drugNotBasicInfo"><%= storage_conditions %></pre>
      <h4>Mode of application:</h4><pre class="drugNotBasicInfo"><%= mode_of_application %></pre>
      <h4>Properties:</h4><pre class="drugNotBasicInfo"><%= properties %></pre>
    </div>
    <% if(admin == true) {%>
    <br>
    <input type="button" value="Remove drug" id="show-button">
    <%}%>
 </div>
</div>
<div id="prompt-form-container">
    <form method="post" id="prompt-form">
      <div id="prompt-message"></div>
      <input type="submit" value="Yes">
      <input type="button" name="cancel" value="Cancel">
    </form>
  </div>
<!-- Special part ends -->
<div id="bottomOfSite">
  <p id="rights">(c) 2016 Vapteka, all rights reserved</p>
</div>
<script>
document.getElementById('show-button').onclick = function() {
  showPrompt("Are you want to remove this item?", function(value) {
    //
  });
};
</script>
</body>
</html>
